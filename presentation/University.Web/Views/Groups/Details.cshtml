@model University.Web.Models.GroupModel

@{
    ViewData["Title"] = "Details";
}

<h1>Group details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Courses)
        </dt>
        <dd class="col-sm-10">
            @foreach (var course in Model.Courses)
            {
                @course.Name <br>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Students)
        </dt>
        <dd class="col-sm-10">
            @foreach (var student in Model.Students)
            {
                <span>@student.FirstName @student.LastName<br/></span>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-success fw-bold">Edit</a> 
    <a asp-action="Index" class="btn btn-primary fw-bold">Back to List</a>
</div>
